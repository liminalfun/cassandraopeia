---
// Components
import Head from '../components/global/Head.astro';
import Header from '../components/global/Header.astro';
import Footer from '../components/global/Footer.astro';
import ColorModeToggle from '../components/global/ColorModeToggle.astro';

// Import
import { fade } from "astro:transitions";
import { getEntry } from 'astro:content';

interface Props {
	title: string;
	description: string;
	share_image: string;
}


const { title, description, share_image } = Astro.props;

import '../styles/style.scss';


---

<!doctype html>
<html lang="en" transition:name="root" transition:animate="none">
	<Head title={title} description={description} share_image={share_image}/>
	<body>
		<Header/>
		<ColorModeToggle/>
        <main class="site">
            <slot  transition:animate={fade({duration: "0.4s"})} />
        </main>
		<Footer />
	</body>
</html>


<style is:global lang="scss">

@use "../styles/base/vars" as *;
@use "../styles/base/mixins" as *;
@use "../styles/base/typography" as *;

// General --------------------------------------------------------------------------------------------------------------
body{
	margin: 0;
	padding: 0;
	min-height: 100vh;
	max-width: 100vw;
	display: flex;
	flex-direction: column;
}

.site{
    width: 100%;
	max-width: 100%;
	margin: 0 auto;
	min-height: 100%;
	flex-grow: 1;
}
	 
</style>