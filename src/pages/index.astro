---
// Homepage layout

import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';
import { Image } from 'astro:assets';


const home = await getEntry('page', 'home');
const featured = await getEntry('art', 'suspended');
const { Content } = await home.render();
---

<Layout title={home.data.title} description={home.data.description}, share_image={home.data.share_image}>
	<main class="site">
		<div class="featured">
			<Image src={featured.data.cover} alt={featured.data.coverAlt} />
		</div>
		<div class="content">
			<Content />
		</div>
	</main>
</Layout>

<style lang="scss">

	@use "../styles/base/vars" as *;

	.hero {
		margin-bottom: 2.5rem;
	}

	.card {
		background-color: var(--color-light-secondary);
		padding: .8rem .5rem;
		border-radius: var(--border-radius);
		margin-bottom: 1.5rem;
	}

	.booking {
		margin-bottom: 3rem;
	}
	
	figure {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

</style>