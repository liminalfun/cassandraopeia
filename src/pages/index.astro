---
// Homepage layout

import Layout from '../layouts/Layout.astro';
import Artwork from '../components/Artwork.astro';
import { getEntry } from 'astro:content';
import { Image } from 'astro:assets';


const home = await getEntry('page', 'home');
const featured = await getEntry('art', 'suspended');
const { Content } = await home.render();
---

<Layout title={home.data.title} description={home.data.description}, share_image={home.data.share_image}>
	<main class="site home">
		<Artwork
			imagePath={featured.data.imagePath}
			altText={featured.data.altText}
			title={featured.data.title}
			date={featured.data.date}
		/>
		<div class="content">
			<Content />
		</div>
	</main>
</Layout>

<style lang="scss">

	@use "../styles/base/vars" as *;

	.site{
		text-align: center;
	}
	.artwork{
		margin: 0 auto;
		display: flex;
	}
	.content{
		text-align: center; 
	}

</style>