---
const year = new Date().getFullYear();
---
<footer>
	<div class="footlinx">
		<a href="/">cassandraopeia</a>
		<a href="/contact">contact</a>
		<a href="https://instagram.com/casi.ta" target="_blank">instagram</a>
	</div>

	<p class="copyright">&copy; {year}, Cassandra Tanko. Website by <a target="_blank" href="https://alexnawotka.com">Alex Nawotka</a></p>
	
</footer>

<style lang="scss">
	@use "../../styles/base/vars" as *;
	@use "../../styles/base/mixins" as *;
	@use "../../styles/base/typography" as *;

	footer {
		max-width: 100%;
		padding: 3rem 1rem 0;
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
		align-items: baseline;
		gap: 1rem;

		@media screen and (max-width: 850px){
			color: blue;
			flex-direction: column;
			align-items: center;
			.copyright {
				@include text-small; 
			}
		}
	}

	a {
		text-decoration: none;
		&:hover{
			text-decoration: underline dotted;
		}
	}

	.footlinx {
		display: flex;
		flex-wrap: wrap;
		gap: 2.5rem;
	}

</style>
