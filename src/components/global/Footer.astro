---
const year = new Date().getFullYear();
---
<footer>
	<div class="footlinx">
		<a href="/">cassandraopeia</a>
		<a href="/contact">contact</a>
		<a href="https://instagram.com/casi.ta" target="_blank">instagram</a>
	</div>

	<p class="copyright">&copy; {year}, Cassandra Tank√≥. Website by <a target="_blank" href="https://alexnawotka.com">Alex Nawotka</a></p>
	
</footer>

<style lang="scss">
	@use "../../styles/base/vars" as *;
	@use "../../styles/base/mixins" as *;
	@use "../../styles/base/typography" as *;

	footer {
		max-width: 100%;
		padding: 3rem 1rem 0;
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
		align-items: baseline;
		gap: 1rem;

		@include is-max-tablet{
			flex-direction: column;
			.copyright {
                margin-bottom: .5em;
				@include text-small; 
			}
		}

        @include is-phone{
            gap: .777rem;
            padding: 3rem .75rem 0;
            .copyright{
                opacity: .6;
            }
        }
	}

	a {
		text-decoration: none;
        @media(hover: hover) and (pointer: fine) {
            &:hover{
                text-decoration: underline dotted;
            }
        }
	}

	.footlinx {
		display: flex;
		flex-wrap: wrap;
		gap: 2.5rem;

        @include is-phone{
            width: 100%;
            flex-direction: column;
            gap: .25em;
            @include text-small;
        }
	}

</style>
