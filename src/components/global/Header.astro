---
import Navigation from './Navigation.astro';
import { Image } from 'astro:assets';

import logo from '../../images/global/cassandra.png';

---
<header>
	<a class="logo" href="/">
		<Image src={logo} alt="Cassandra" width="131" height="21" />
	</a>
	<nav class="nav-links">
		<Navigation />
  	</nav>
</header>

<style lang="scss" is:global>
	@use "../../styles/base/typography" as *;

	header {
		padding: 1rem 1rem;
		max-width: 800px;
		margin: 0 auto;
	}

	.logo {
		display: block;
		text-align: center;
		margin: 0 auto .1rem;
	}

	.dark .logo img {
			filter: invert(100%);
	}

	.nav-links {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		justify-content: center;
		> a {
			color: var(--color-foreground);
			text-decoration: none;
			padding: .6rem 1.75rem;
			margin: 0 -.5rem;
			border: 1px solid transparent;
			border-radius: 100%;
			transition: border 0.7s ease-in-out;
			&:hover{
				border: 1px solid var(--color-foreground);
			}
			&.active{
				border: 1px dotted var(--color-foreground);
			}
		}
	}
</style>
