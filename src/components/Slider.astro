---
/*
  Slider.astro
  
  Horizontal slider component using Swiper.js to showcase entries in a content collection.

    Props:
        - posts: Array of objects containing 'id' and 'collection' for each content entry to display in the slider.

    Passed to Artwork component to render each slide's content:
        - id: file name of the content entry -- without '.mdx' extension
        - collection: content collection name -- folder in src/content
  
    Concepts in this file:
        - Swiper.js integration for horizontal sliding functionality using https://www.npmjs.com/package/astro-swiper
        - Mapping over passed 'posts' to render multiple Artwork components as slides
        - class:list directive to conditionally apply classes to Astro components
*/

import Artwork from './Artwork.astro';
import { Swiper, SwiperWrapper, SwiperSlide } from 'astro-swiper';
import type { AstroSwiperType } from "astro-swiper";

const { posts } = Astro.props;

const astroSwiperOptions: AstroSwiperType = {
    options: {
        slidesPerView: "auto",
        // slidesPerView: 2.5,
        spaceBetween: 30,
        initialSlide: 1,
        loop: true,
        centeredSlides: true,
        centerInsufficientSlides: true,
        scrollbar: { draggable: true },
        mousewheel: true,
        keyboard: true,
        roundLengths: true,
        watchSlidesProgress: true,
        breakpoints: {
            320: {
                // slidesPerView: 1.4,
                spaceBetween: 12,
            },
            640: {
                // slidesPerView: 2.1,
                spaceBetween: 20,   
            },
            850: {
                // slidesPerView: 2.5,
                spaceBetween: 30,
            }
        },
    },
};

// // unique id per instance so multiple sliders can be on the same page
// const sliderId = `slider-${Date.now().toString(36)}-${Math.floor(Math.random() * 10000)}`;

---

{posts.length === 0 ? (
    <div class="slider-error">Sorry, there's no matching artwork here! Please check the IDs you're referencing. </div>
    )  : (
    <Swiper options={astroSwiperOptions.options}>
        <SwiperWrapper>
            {posts.map(post => (
                <SwiperSlide>
                    <Artwork id={post.id} collection={post.collection} className="is-slide"/>
                </SwiperSlide>
            ))}
        </SwiperWrapper>
    </Swiper>
)}


<style lang="scss">
    @use "../styles/base/mixins" as *;

    .swiper-wrapper{
        width: 100%;
        max-width: 100%;
        max-height: 100vh;
        // CSS Grid/Flexbox bug size workaround
        // @see https://github.com/kenwheeler/slick/issues/982
        // @see https://github.com/nolimits4web/swiper/issues/3599
        min-height: 0;
        min-width: 0;
        @media(hover: hover) and (pointer: fine) {
            &:hover > .swiper-slide:not(:hover){
                opacity: .5;
            
            }
        }
    }

    .swiper{
        transition: opacity .5s ease-in;
    }

    .swiper:not(.swiper-initialized){
        opacity: 0;
        
    }
    .swiper-initialized{
        opacity: 1;
    }

    .swiper-slide{
        transition: opacity .3s ease-out;
        max-width: 80%;
        width: max-content;
    }

    @media(hover: none){
        .swiper-slide-next, .swiper-slide-prev{
            opacity: .5;
        }
        .swiper-slide-active{
            opacity: 1;
        }
    }
    @include is-phone{
        .swiper-slide{
            max-width: 85vw;
        }
    }
</style>